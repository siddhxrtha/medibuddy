      text-align: center;
    }

    .nav-cta {
      display: flex;
      gap: 0.75rem;
      align-items: center;
    }

    .user-name {
      font-weight: 600;
      color: var(--text);
      font-size: 0.9rem;
    }

    .btn {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      padding: 0.625rem 1.25rem;
      font-size: 0.95rem;
      font-weight: 600;
      border: none;
      border-radius: 0.75rem;
      cursor: pointer;
      text-decoration: none;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      white-space: nowrap;
    }

    .btn-outline {
      background: transparent;
      color: var(--primary);
      border: 2px solid var(--primary);
    }

    .btn-outline:hover {
      background: var(--primary);
      color: white;
      transform: translateY(-2px);
      box-shadow: 0 8px 16px rgba(37, 99, 235, 0.3);
    }

    .hamburger {
      display: none;
      flex-direction: column;
      background: none;
      border: none;
      cursor: pointer;
      gap: 5px;
      padding: 0;
      z-index: 1001;
    }

    .hamburger span {
      width: 24px;
      height: 3px;
      background: var(--text);
      border-radius: 2px;
      transition: all 0.3s ease;
    }

    .hamburger.active span:nth-child(1) {
      transform: rotate(45deg) translate(7px, 7px);
    }

    .hamburger.active span:nth-child(2) {
      opacity: 0;
    }

    .hamburger.active span:nth-child(3) {
      transform: rotate(-45deg) translate(7px, -7px);
    }

    /* Mobile Responsive */
    @media (max-width: 768px) {
      .hamburger {
        display: flex;
      }

      .nav-content {
        display: none;
        position: absolute;
        top: 100%;
        left: 0;
        right: 0;
        background: white;
        flex-direction: column;
        gap: 0;
        padding: 1rem;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        border-top: 2px solid var(--border);
      }

      .nav-content.active {
        display: flex;
      }

      .nav-links {
        flex-direction: column;
        width: 100%;
        gap: 0;
      }

      .nav-item {
        width: 100%;
      }

      .nav-link {
        display: block;
        padding: 1rem;
        text-align: left;
        width: 100%;
      }

      .nav-cta {
        flex-direction: column;
        width: 100%;
        gap: 0.5rem;
        padding-top: 1rem;
        border-top: 1px solid var(--border);
      }

      .user-name {
        width: 100%;
        text-align: center;
        padding: 0.5rem;
      }

      .btn-outline {
        width: 100%;
      }

      .navbar-container {
        padding: 1rem;
      }
    }

    /* Enhanced Mobile UX */
    @media (max-width: 576px) {
      .card {
        border-radius: 10px !important;
      }

